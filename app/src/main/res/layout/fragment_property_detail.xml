                    <TextView
                        android:id="@+id/agent_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="924470"
                        android:textColor="#1E1E1E"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="@id/agent_license_heading"
                        app:layout_constraintTop_toBottomOf="@id/agent_license_heading" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#D2D2D2"
                    app:layout_constraintTop_toBottomOf="@id/layout_agent_info" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FCFCFC"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/divider3">

                    <TextView
                        android:id="@+id/heading_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Description"
                        android:textColor="#1E1E1E"
                        android:textSize="@dimen/_17ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/property_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Charming &amp; inviting space, perfect for those who are seeking warm and comfortable living environment. Charming &amp; inviting space, perfect for those who are seeking warm and comfortable living environment."
